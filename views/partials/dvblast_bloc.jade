.row
    .col-md-6
        form(id="scanform")        
            .form-group
                .row
                    legend.col-form-label.col-sm-5.pt-0
                        | Tuner configuration
            .form-group.row
                label.col-sm-2.col-form-label(for="TunnerListSelect")
                    | Tuner
                .col-sm-10
                    select.form-control.form-control-sm(id="TunnerListSelect")
                        option(value="1", selected)
                            | #1                        
                        option(value="2", selected)
                            | #2
            .form-group.row
                label.col-sm-2.col-form-label(for="inputSat")
                    | Satellite
                .col-sm-10
                    select.form-control.form-control-sm(id="SatListSelect")
                        - each i in sat_list
                            option(value="#{i}")
                                | #{i}


            button.btn.btn-primary.btn-sm.scan-button(id="tunerStatusButton")

                |  Start Scan
                span.spinner-border.spinner-border-sm.scan-spinner(role="status" aria-hidden="true" id="SpinnerScaning", hidden)           